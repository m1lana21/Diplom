       xmlns:local="clr-namespace:Clens" xmlns:local1="clr-namespace:Clens"
       x:Class="Clens.AppShell">
    
    <TabBar>
        <ShellContent Title="Линзы"  Route="LensesPage" ContentTemplate="{DataTemplate local:LensesPage}" />
