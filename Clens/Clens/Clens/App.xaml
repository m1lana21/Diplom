<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converters="clr-namespace:Clens.Converters" x:Class="Clens.App">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Background" Value="#B5DDA4"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="FontFamily" Value="Comfortaa-Bold"></Setter>
            <Setter Property="CornerRadius" Value="15"></Setter>
            <Setter Property="TextColor" Value="Black"></Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontFamily" Value = "Comfortaa-Bold"></Setter>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="FontFamily" Value = "Comfortaa-Light"></Setter>
        </Style>

        <Style TargetType="Picker">
            <Setter Property="FontFamily" Value = "Comfortaa-Light"></Setter>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="FontFamily" Value = "Comfortaa-Light"></Setter>
        </Style>

        <ResourceDictionary>
            <converters:IsNotStandardFirmConverter x:Key="IsNotStandardFirmConverter" />
        </ResourceDictionary>

    </Application.Resources>
    
</Application>